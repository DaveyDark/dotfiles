{
  "Begin Environment": {
    "prefix": "env",
    "body": ["\\begin{${1:environment}}", "  $0", "\\end{${1:environment}}"],
    "description": "Surround text with begin and end environment statements"
  },
  "Figure Environment": {
    "prefix": "if",
    "body": [
      "\\begin{figure}[H]",
      "  \\centering",
      "  \\includegraphics[width=0.8\\textwidth]{${2:path/to/image}}",
      "\\end{figure}"
    ],
    "description": "Insert a figure minimally"
  },
  "Figure Full Environment": {
    "prefix": "iff",
    "body": [
      "\\begin{figure}[H]",
      "  \\centering",
      "  \\includegraphics[width=${1:0.8\\textwidth}]{${2:path/to/image}}",
      "  \\caption{${3:Caption}}",
      "  \\label{fig:${4:label}}",
      "\\end{figure}"
    ],
    "description": "Insert a figure with caption and label"
  },
  "Equation Environment": {
    "prefix": "eq",
    "body": ["\\begin{equation}", "  ${1:equation}", "\\end{equation}"],
    "description": "Equation environment"
  },
  "Align Environment": {
    "prefix": "al",
    "body": ["\\begin{align}", "  ${1:equation}", "\\end{align}"],
    "description": "Align environment for multi-line equations"
  },
  "Itemize Environment": {
    "prefix": "it",
    "body": ["\\begin{itemize}", "  \\item ${1:item}", "\\end{itemize}"],
    "description": "Itemize environment for lists"
  },
  "Enumerate Environment": {
    "prefix": "en",
    "body": ["\\begin{enumerate}", "  \\item ${1:item}", "\\end{enumerate}"],
    "description": "Enumerate environment for numbered lists"
  }
}
